<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.messanger.mapper.FileMapper">

    <resultMap id="FileMap" type="com.project.messanger.dto.FileDto">
        <id property="fileIdx" column="file_idx"/>
        <result property="name" column="name"/>
        <result property="filePath" column="file_path"/>
        <result property="size" column="size"/>
        <result property="isDrive" column="is_drive"/>
        <result property="creatorIdx" column="creator_idx"/>
        <result property="createdDate" column="created_date"/>
    </resultMap>

    <resultMap id="FileWithUserMap" type="com.project.messanger.dto.FileWithUserDto">
        <id property="fileIdx" column="file_idx"/>
        <result property="name" column="name"/>
        <result property="filePath" column="file_path"/>
        <result property="size" column="size"/>
        <result property="isDrive" column="is_drive"/>
        <result property="creatorIdx" column="creator_idx"/>
        <result property="creatorName" column="creator_name"/>
        <result property="createdDate" column="created_date"/>
    </resultMap>

    <sql id="sqlFileListCondition">
        FROM file
        INNER JOIN user
           ON user.user_idx = file.creator_idx
        WHERE file.is_drive = 'Y'
        <if test="name != null">
            AND UPPER(file.name) LIKE CONCAT('%', UPPER(#{name}), '%')
        </if>
    </sql>

    <select id="getFileCount" parameterType="hashmap" resultType="long">
        SELECT COUNT(file.file_idx)
        <include refid="sqlFileListCondition" />
    </select>

    <select id="getFileList" parameterType="hashmap" resultMap="FileWithUserMap">
        SELECT file.file_idx
             , file.name
             , file.file_path
             , file.size
             , file.is_drive
             , file.creator_idx
             , user.user_name AS creator_name
             , file.created_date
        <include refid="sqlFileListCondition" />
        LIMIT ${limit} OFFSET ${offset}
    </select>

    <select id="getFileByIdx" parameterType="long" resultMap="FileMap">
        SELECT file_idx
             , name
             , file_path
             , size
             , is_drive
             , creator_idx
             , created_date
        FROM file
        WHERE file_idx = #{fileIdx}
    </select>

    <insert id="insertFile" parameterType="com.project.messanger.dto.FileDto" useGeneratedKeys="true" keyProperty="fileIdx" keyColumn="file_idx">
        INSERT file
        SET name = #{name},
            file_path = #{filePath},
            size = #{size},
            <choose>
                <when test="isDrive != null"> is_drive = #{isDrive},</when>
                <otherwise> is_drive = 'N',</otherwise>
            </choose>
            creator_idx = #{creatorIdx},
            created_date = NOW()
    </insert>

    <delete id="deleteFile" parameterType="long">
        DELETE FROM file
        WHERE file_idx = #{fileIdx}
    </delete>

</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.messanger.mapper.UserMapper">

    <resultMap id="UserMap" type="com.project.messanger.dto.UserDto">
        <id property="userIdx" column="user_idx"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="userName" column="user_name"/>
        <result property="phoneNumber" column="phone_number"/>
        <result property="adminYn" column="admin_yn"/>
        <result property="leaderYn" column="leader_yn"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="createdDate" column="created_date"/>
        <result property="updatedDate" column="updated_date"/>
    </resultMap>

    <select id="getUserList" parameterType="hashmap" resultMap="UserMap">
        SELECT *
        FROM user
        WHERE is_deleted = 'N'
            <if test="email != null">
                AND UPPER(email) LIKE CONCAT('%', UPPER(#{email}), '%')
            </if>
            <if test="userName != null">
                AND UPPER(user_name) LIKE CONCAT('%', UPPER(#{user_name}), '%')
            </if>
            <if test="phoneNumber != null">
                AND UPPER(phone_number) LIKE CONCAT('%', UPPER(#{phone_number}), '%')
            </if>
        LIMIT ${limit} OFFSET ${offset}
    </select>

    <select id="getUserByIdx" parameterType="long" resultMap="UserMap">
        SELECT user_idx, email, user_name, phone_number, admin_yn, leader_yn
        FROM user
        WHERE user_idx = #{userIdx}
    </select>

    <select id="getUserByEmail" parameterType="string" resultMap="UserMap">
        SELECT user_idx, email, password
        FROM user
        WHERE email = #{email}
    </select>

    <insert id="insertUser" parameterType="com.project.messanger.dto.UserDto" useGeneratedKeys="true" keyProperty="userIdx" keyColumn="user_idx">
        INSERT user
        SET email = #{email},
            <if test="password != null"> password = #{password},</if>
            <if test="userName != null"> user_name = #{userName},</if>
            <if test="phoneNumber != null"> phone_number = #{phoneNumber},</if>
            <if test="adminYn != null"> admin_yn = #{adminYn},</if>
            <if test="leaderYn != null"> leader_yn = #{leaderYn},</if>
            created_date = NOW(),
            updated_date = NOW()
    </insert>

    <update id="updateUser" parameterType="com.project.messanger.dto.UserDto">
        UPDATE user
        SET <if test="password != null"> password = #{password},</if>
            <if test="userName != null"> user_name = #{userName},</if>
            <if test="phoneNumber != null"> phone_number = #{phoneNumber},</if>
            <if test="adminYn != null"> admin_yn = #{adminYn},</if>
            <if test="leaderYn != null"> leader_yn = #{leaderYn},</if>
            updated_date = NOW()
        WHERE user_idx = #{userIdx}
    </update>

    <update id="deleteUser" parameterType="com.project.messanger.dto.UserDto">
        UPDATE user
        SET email = '',
            password = NULL,
            phone_number = NULL,
            is_deleted = 'Y',
            updated_date = NOW()
        WHERE user_idx = #{userIdx}
    </update>

    <insert id="insertTeam" parameterType="string" useGeneratedKeys="true" keyProperty="teamIdx" keyColumn="team_idx">
        INSERT team
        SET team_name = #{teamName},
            created_date = NOW(),
            updated_date = NOW()
    </insert>

    <update id="updateTeam" parameterType="com.project.messanger.dto.TeamDto">
        UPDATE team
        SET team_name = #{teamName},
            updated_date = NOW()
        WHERE team_idx = #{teamIdx}
    </update>

    <delete id="deleteTeam" parameterType="long">
        DELETE FROM team
        WHERE team_idx = #{teamIdx}
    </delete>

    <insert id="insertTeamUserLink" parameterType="string">
        INSERT INTO team_user_link (user_idx, team_idx)
        VALUES <foreach collection="list" item="value" separator=",">${value}</foreach>
    </insert>

    <delete id="deleteTeamUserLink" parameterType="long">
        DELETE FROM team_user_link
        WHERE link_idx IN <foreach collection="list" item="value" open="(" close=")" separator=",">#{value}</foreach>
    </delete>

</mapper>
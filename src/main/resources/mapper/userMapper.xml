<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.messanger.mapper.UserMapper">

    <resultMap id="UserMap" type="com.project.messanger.dto.UserDto">
        <id property="userIdx" column="user_idx"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="userName" column="user_name"/>
        <result property="phoneNumber" column="phone_number"/>
        <result property="adminYn" column="admin_yn"/>
        <result property="leaderYn" column="leader_yn"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="createdDate" column="created_date"/>
        <result property="updatedDate" column="updated_date"/>
    </resultMap>

    <select id="getUserByIdx" parameterType="long" resultMap="UserMap">
        SELECT *
        FROM user
        WHERE user_idx = #{userIdx}
    </select>

    <select id="getUserByEmail" parameterType="string" resultMap="UserMap">
        SELECT user_idx, email, password
        FROM user
        WHERE email = #{email}
    </select>

    <insert id="insertUser" parameterType="com.project.messanger.dto.UserDto" useGeneratedKeys="true" keyProperty="userIdx" keyColumn="user_idx">
        INSERT user
        SET email           = #{email},
            <if test="password != null">
                password = #{password},
            </if>
            user_name       = #{userName},
            phone_number    = #{phoneNumber},
            admin_yn        = #{adminYn},
            leader_yn       = #{leaderYn},
            created_date    = NOW(),
            updated_date    = NOW()
    </insert>

    <update id="updateUser" parameterType="com.project.messanger.dto.UserDto">
        UPDATE user
        SET email           = #{email},
            <choose>
                <when test="password == null">
                    password = NULL
                </when>
                <otherwise>
                    password = #{password},
                </otherwise>
            </choose>
            user_name       = #{userName},
            phone_number    = #{phoneNumber},
            admin_yn        = #{adminYn},
            leader_yn       = #{leaderYn},
            updated_date    = NOW()
        WHERE user_idx = #{userIdx}
    </update>

</mapper>